@Controller
public class HelloWorldController {
	@Autowired
	private  HttpServletRequest request;
	@RequestMapping("/hello")
	@ResponseBody
	public String testHello() {
		int a=0;
		int b=11;
		int v=a+b;
		returnStr();
		return "Hello,spring mvc bbb你大爷";
	}
	public String returnStr(){
		return "a";
	}
}
